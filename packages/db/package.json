{
  "name": "@repo/db",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/index.ts"
      ]
    }
  },
  "scripts": {
    "db:format": "prisma format",
    "db:generate": "prisma generate",
    "db:push": "dotenv prisma db push",
    "db:reset": "prisma db push --force-reset",
    "db:seed": "dotenv tsx --transpile-only ./seed/index.ts",
    "db:studio": "prisma studio",
    "format": "prettier \"**/*.{ts,tsx,md,mdx,json}\" --check",
    "postinstall": "prisma generate",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@repo/lint": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^16.18.11",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.42.0",
    "prisma": "^5.0.0",
    "simple-git": "^3.19.1",
    "tsup": "5.12.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "uuid-by-string": "^4.0.0",
    "yaml": "^2.3.1"
  },
  "prisma": {
    "seed": "tsx ./seed.ts"
  }
}
